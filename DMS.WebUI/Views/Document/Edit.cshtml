@model DMS.Data.Document

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var categoriesList = new SelectList(ViewBag.categories, "CategoryId", "CategoryName");
}

<style>
    input[type=text], select, textarea, password {
        width: 100%;
        padding: 6px;
        border: 1px solid #ccc;
        border-radius: 4px;
        resize: vertical;
    }

    input[type=file] {
        width: 100%;
        padding: 4px;
        border: 1px solid #ccc;
        border-radius: 4px;
        resize: vertical;
    }
</style>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">

            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item">Document </li>
                    <li class="breadcrumb-item active">Edit </li>

                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" method="post"
              enctype="multipart/form-data">
            <input readonly asp-for="DocumentId" value="@Model.DocumentId" style="display:none" />
            @if (!string.IsNullOrEmpty(ViewBag.success))
            {
                <div class="alert alert-success" role="alert">
                    <strong>Success!</strong> @ViewBag.success.
                </div>}
            @if (!string.IsNullOrEmpty(ViewBag.error))
            {
                <div class="alert alert-warning" role="alert">
                    <strong>Failed!</strong> @ViewBag.error.
                </div>
            }

            <div class="row">
                <div class="col-md-6">
                    Choose a Document:<input type="file" name="file" />
                </div>
            </div><br>

            <div class="row">
                <div class="col-md-6">
                    <input asp-for="DocumentName" class="form-control" placeholder="Email" value="@Model.DocumentName" />
                    <span asp-validation-for="DocumentName" class="text-danger"></span>
                </div>
            </div><br>
            <div class="row">
                <div class="col-md-6">
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                    @Html.DropDownListFor(m => m.CategoryId, categoriesList, "Select Category")
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-6">
                    <input type="submit" name="back" value="Back" class="btn btn-outline-success"
                           formaction="/Document" formmethod="get" />
                    <div class="pull-right">
                        <button type="submit" class="btn btn-info" style="float:right;">Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

</div>

<div>

</div>

